session JWT 模拟cookie

successHandler(req,resp,authentication){
    resp.setContentType("application/java:charset=utf-8")
    PrintWriter out = resp.getWriter();
    out.getWriter(new ObjectMapper().writeValueAsString(authentication.getPrinciple()));
    out.flush();
    out.close();
}

